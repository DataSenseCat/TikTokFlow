{
  "compilerOptions": {
    // --- Essential settings for Vercel Serverless Functions ---
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist", // Specifies where to output the compiled JS files
    "esModuleInterop": true,
    "strict": true,

    // --- Project-specific settings ---
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    
    // --- Settings to disable ---
    // "noEmit": false, // This is the default, so we can remove the line entirely.
    // "allowImportingTsExtensions": false, // Not needed and can cause issues.
    // "isolatedModules": false // Not required for backend build.
  },
  // CRITICAL: This tells TypeScript which files to compile for the backend.
  "include": ["api/**/*.ts"]
}
